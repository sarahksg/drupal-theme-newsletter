<!-- EMPLOYEE SPOTLIGHT Two Columns, With Padding ==> Stacked Layout : BEGIN -->
<tr  id="employees">
    <td style="">
        <table border="0" width="100%" cellpadding="0" cellspacing="0" align="center" bgcolor="#AEB236">
            <tr>

                <td style="padding: 30px; color: #ffffff; font-family: 'Slabo 13px', serif;">
                    <div align="center"><img src="http://staff.parksconservancy.org/sites/default/files/images/spotlight.png" alt="spotlight" height="49" width="55" style="display: block;margin: auto;"></div>
                    <h2 align="center" style="text-align: center; font-size: 24px; letter-spacing: 2px;">EMPLOYEE SPOTLIGHT</h2>
                    {% for item in items %}


                        {% if multiple %}
                            <hr style="width: 75%; height: 1px; color: #ffffff; background-color: #ffffff; opacity: .8; border: none;">
                            <div{{ item.attributes.addClass('field__item') }}>
                            {% endif %}
                            {{ item.content }}
                            {% if multiple %}
                            </div>

                        {% endif %}
                    {% endfor %}{# empty Twig template #}
                </td>
            </tr>
        </table>
    </td>
</tr>
<!--  EMPLOYEE SPOTLIGHT Two Columns, With Padding ==> Stacked Layout : END -->
